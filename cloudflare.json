{
    "name": "Caddi",
    "description": "Caddi is an innovative ad unit available exclusively to CloudFlare publishers. It is complementary to your existing ads, and with only one click will appear on your site and earn you additional revenue.",
    "keywords" : [
        "advertising",
        "monetization",
        "ads"
        ],
    "version": "0.3.1",
    "category":"advertising",
    "contributors": [
        {
            "name" : "greg lee coleman",
            "email" : "gleeco@cloudflare.com"
        }
    ],
    "repository" : {
        "type" : "git",
        "url" : "https://github.com/gleecology/cfapp-caddi.git"
    },
    "main" : "./public/javascripts/caddi.js",
    "dependencies" : {
    },
    "licenses" : [
    {
        "type": "MIT",
        "url": "http://www.opensource.org/licenses/MIT"
    }],
    "implements" : "AMD",
    "scripts" : {
    },
    "config" : {
        "assets" : {
            "logos" : {
                "200px": "./public/images/caddi_200.png",
                "132px": "./public/images/caddi_132.png"
            },
            "detail_page" : [
                "./public/images/caddi_screenshot.png"
            ]
        },
        "payment": {},
        "details": {
           "Category": "advertising",
           "Language": "English",
           "Restrictions": "Use of Caddi is subject to approval. CloudFlare reserves the right to deny access due to misuse or abuse."
       },
       "interface": [

          {
            "id": "orient",
            "name": "Ad Orientation",
            "description" : "Select where to place the Slider on your site",
            "type": "select",
            "options": [
                { "value": "left",          "label": "Left Top"             },
                { "value": "right",         "label": "Right Top",    "selected": "true" },
                { "value": "left_bottom",   "label": "Left Bottom"      },
                { "value": "right_bottom",  "label": "Right Bottom"     }
            ]
          },

          {
            "id": "text_only",
            "name": "Ad Format",
            "description" : "Choose to display only static ads, or static and video ads",
            "type": "select",
            "options": [
                { 
                    "label": "Static and Video",
                    "value": 0,
                },
                { 
                    "label": "Static only",
                    "value": 1
                    "selected": true
                }
            ], 
            
            {
            "id": "min_resolution",
            "name": "Minimum resolution",
            "description" : "Limit display of the Slider to users of a particular window size",
            "type": "select",
            "options": [
                { "value": 0,           "label": "All resolutions",  "selected": "true" },
                { "value": "1024x0",    "label": "wider than 1024" },
                { "value": "1600x0",    "label": "wider than 1600" }
            ]
          },

          {
            "id": "scroll",
            "name": "Sticky Scroll",
            "description" : "Turn Sticky Scroll on to make the Slider scrollable within the browser window",
            "type": "select",
            "options": [
                { "value": 0,       "label": "Off",    "selected": "true" },
                { "value": 1,       "label": "On" }
            ]
          },
          

          {
            "id": "ss_view_max_ct",
            "name": "Impressions Per Session",
            "description" : "Choose the maximum number of impressions to be shown per visitor session (20 minutes)",
            "type": "select",
            "options": [
                { 
                    "label": "No limit",
                    "value": 0
                },
                { "value": 50,  "label": "50 impressions"  },
                { "value": 25,  "label": "25 impressions", "selected": true  },
                { "value": 10,  "label": "10 impressions"  },
                { "value": 5,   "label": "5 impressions"   },
                { "value": 1,   "label": "1 impressions"   }
            ] 
          },

          {
            "id": "user_pause_ttl",
            "name": "Visitor Opt-out Period",
            "description" : "Select the period of time to pause the Slider after it is closed",
            "type": "select",
            "options": [
                { 
                    "label": "Do not pause",
                    "selected": true,
                    "value": 0
                },
                { "value": 60,      "label": "1 minute" },
                { "value": 360,     "label": "10 minutes" },
                { "value": 3600,    "label": "1 hour" },
                { "value": 14400,   "label": "4 hours" },
                { "value": 43200,   "label": "12 hours" },
                { "value": 86400,   "label": "24 hours" },
                { "value": 259200,  "label": "72 hours" },
                { "value": 315360000, "label": "Never show again" }
            ] 
          }


          }
        ]
    }
}
